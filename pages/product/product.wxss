/* pages/product/product.wxss */

/*轮播图效果  */

.detail-swiper {
  height: 450rpx;
  width: 100%;
}

.detail-swiper-box {
  overflow-x: hidden;
}

.detail-swiper-item {
  height: 100%;
  width: 100%;
}

.detail-swiper-item image {
  height: 100%;
  width: 100%;
}

/*商品标题和价格样式  */

.product-detail {
  padding: 20rpx 20rpx;
  color: #454552;
  text-align: left;
}

.product-detail .price {
  font-size: 38rpx;
  color: red;
  font-weight: 400;
}

.product-detail .title {
  font-size: 35rpx;
  font-weight: 700;
}

/*商品规格  */

.product-attribute {
  min-height: 0vh;
}

.attribute-item {
  display: flex;
  margin: 25rpx 0;
  font-size: 25rpx;
}

.product-attribute .name {
  width: 100rpx;
  color: #808080;
  text-align: center;
}

.product-attribute .detail {
  flex: 1;
  padding-right: 50rpx;
}

/*商品评价  */

.product-comment {
  margin: 25rpx 0;
  font-size: 25rpx;
}

.comment-title {
  padding-left: 20rpx;
}

.comment-content {
  padding-left: 20rpx;
}

/*商品规格选择  */

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 90rpx;
}

button {
  text-align: center;
  text-decoration: none;
  color: white;
  /* padding-top: 2px; */
  display: inline-block;
  font-size: 30rpx;
  overflow: hidden;
  margin: 20px auto;
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
}

.button-add-cart {
  border-radius: 0px;
  border-bottom-left-radius: 50px;
  border-top-left-radius: 50px;
  background-color: #bfa880;
}

.button-buy-now {
  border-radius: 0px;
  border-bottom-right-radius: 50px;
  border-top-right-radius: 50px;
  background-color: #ab956d;
}

.button-add-cart::after {
  border: none;
}

.button-buy-now::after {
  border: none;
}

.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
