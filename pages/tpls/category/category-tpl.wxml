<template name="categorydetail">
  <view class="category-detail-box" hidden="{{!categoryInfo}}">
    <view class="category-header">
      <image src="{{categoryInfo.topImgUrl}}" mode="aspectFill"></image>
    </view>
    <view class="category-title">
      <text>{{categoryInfo.title}}</text>
    </view>
    <view class="category-main">
      <block wx:for="{{categoryInfo.procucts}}" wx:key="{{index}}">
        <view class="category-goods-items {{index%3==1?'middle':''}}" data-id="{{item.goodsId}}" bindtap="onProductsItemTap">
          <image src="{{item.goodsMinImg}}" mode="aspectFill"></image>
          <view>{{item.goodsSubtitle}}</view>
        </view>
      </block>
    </view>
  </view>
</template>